<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="swe4.managementtool.controllers.GameViewController">
    <HBox alignment="CENTER">
        <padding>
            <Insets top="15"/>
        </padding>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Games" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Text>
    </HBox>
    <SplitPane dividerPositions="0.66">
        <TableView fx:id="gameTableView">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="Team 1" fx:id="team1Col"/>
                <TableColumn text="Team 2" fx:id="team2Col"/>
                <TableColumn text="Score Team 1" fx:id="team1ScoreCol"/>
                <TableColumn text="Score Team 2" fx:id="team2ScoreCol"/>
                <TableColumn text="Start Time" fx:id="startTimeCol"/>
                <TableColumn text="Start Date" fx:id="startDateCol"/>
            </columns>
        </TableView>
        <VBox/>
    </SplitPane>
</VBox>