<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="swe4.managementtool.controllers.GameViewController">
    <HBox alignment="CENTER">
        <padding>
            <Insets top="15"/>
        </padding>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Games" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Text>
    </HBox>
    <SplitPane dividerPositions="0.66">
        <TableView fx:id="gameTableView">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="Team 1" fx:id="team1Col"/>
                <TableColumn text="Team 2" fx:id="team2Col"/>
                <TableColumn text="Score Team 1" fx:id="team1ScoreCol"/>
                <TableColumn text="Score Team 2" fx:id="team2ScoreCol"/>
                <TableColumn text="Start Time" fx:id="startTimeCol"/>
                <TableColumn text="Start Date" fx:id="startDateCol"/>
            </columns>
        </TableView>
        <VBox spacing="15">
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets right="30.0"/>
                </padding>
                <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Team 1"/>
                <ComboBox fx:id="team1Field" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets right="30.0"/>
                </padding>
                <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Team 2"/>
                <ComboBox fx:id="team2Field" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets right="30.0"/>
                </padding>
                <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Score Team 1"/>
                <Spinner fx:id="scoreTeam1Field" max="999" min="0" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets right="30.0"/>
                </padding>
                <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Score Team 2"/>
                <Spinner fx:id="scoreTeam2Field" max="999" min="0" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets right="30.0"/>
                </padding>
                <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Game Date"/>
                <DatePicker fx:id="gameDateField" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets right="30.0"/>
                </padding>
                <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Game Time"/>
                <TextField fx:id="gameTimeField" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="CENTER" spacing="15">
                <padding>
                    <Insets bottom="30.0"/>
                </padding>
                <Button mnemonicParsing="false" text="Add" disable="true"/>
            </HBox>
        </VBox>
    </SplitPane>
</VBox>